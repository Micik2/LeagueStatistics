<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/win_game"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#a4c639">

    <ImageView
        android:id="@+id/main_champion_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="13dp" />

    <TextView
        android:id="@+id/main_champion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/main_champion_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/kills"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/main_champion_image"
        android:textSize="40dp"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/first_slash"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:text="/"
        android:textSize="45dp"
        android:textAlignment="center"
        android:textColorHighlight="@color/colorPrimary"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@+id/kills" />

    <TextView
        android:id="@+id/deaths"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_toRightOf="@+id/first_slash" />

    <TextView
        android:id="@+id/time"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/main_champion_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/second_slash"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_marginBottom="12dp"
        android:text="/"
        android:textColorHighlight="@color/colorPrimary"
        android:textSize="45dp"
        android:textAlignment="center"
        android:layout_toRightOf="@id/deaths"/>

    <TextView
        android:id="@+id/assists"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginBottom="12dp"
        android:layout_toRightOf="@id/second_slash"/>

    <TextView
        android:id="@+id/gold"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/deaths"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/minions"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/gold"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/second_slash"
        android:layout_marginTop="10dp"/>

</RelativeLayout>